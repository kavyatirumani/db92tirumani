extends layout

block content
  h1= title
  br
  - let dogs = results
   div(class = "container-fluid")
    div(class = "row")
     each i,index in dogs
        div(class="col-sm-4" onclick=`buy(${index})`) breed: #{i.breed} 
        br
        br 
        div(class="col-sm-4" onclick=`buy(${index})`) price: #{i.price}
        br
        br  
        div(class="col-sm-4" onclick=`buy(${index})`) colour: #{i.colour}
        script.
                function buy(itemNo){
                    alert(`You purchased item ${itemNo+1}`)
                }
   